// learn more about it in the docs https://pris.ly/d/prisma-schema

datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@localhost:5432/omo-marketplace?schema=public"
}

generator client {
    provider = "prisma-client-js"
}

model Offer {
  ownerIdentityId String @unique
  createdAt DateTime @default(now())

  name String
  description String
  price Float
  city String
  category String
}
